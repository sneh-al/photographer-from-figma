---

import SectionTitle from "./ui/SectionTitle.astro";
import PageButton from "./ui/PageButton.astro";
import Section from "./ui/Section.astro";
import { timeline } from "../const";
import Card from "./Card.astro";

---

<Section>
  <article>
    <header
      class="flex flex-col gap-3 md:flex-row justify-between md:items-center">
      <SectionTitle title="Journey" heading="Damien's Journey - A Timeline" />
      
    </header>
    <div class="divider"></div>
    <main class="flex flex-col-reverse md:flex-row items-center justify-between gap-10 pt-5 md:pt-16">
      <div class="rounded-3xl text-grey-50 grid grid-cols-1 md:grid-cols-2 gap-5">
        {timeline.map(item => <Card title={item.year} info={item.info}/>)}
      </div>
      
    </main>
  </article>
</Section>
