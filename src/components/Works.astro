---
import { projects } from "../const";
import Carousel from "./ui/Carousel";
import Work from "./ui/Work.astro";
import WorkSection from "./ui/WorkSection.astro";
---


{
  projects.map((project) => (
    <WorkSection title={project.title} total={project.works.length}>
        
    
      <div class="carousel flex gap-10">
        {project.works.map((work) => (
          <Work id={project.id.toString()+ work.id.toString()} name={work.name} time={work.time} image={work.image} />
        ))}
      </div>
      
    </WorkSection>
  ))
}


