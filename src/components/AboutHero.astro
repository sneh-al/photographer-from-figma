---
import Imageabout from "@assets/images/Imageabout.png"
import HeroImage from "@assets/images/Imageabouthero.png"
import HeroTitle from "./ui/HeroTitle.astro"
import Heroui from "./ui/Heroui.astro"


const overview = [

{
    numbers : "15+",
    title: "Years in Business"
},
{
    numbers : "500+",
    title: "Happy Clients"
},
{
    numbers : "10+",
    title: "Photography Awards"
},
{
    numbers : "05+",
    title: "International Shoots"
},
{
    numbers : "10,000+",
    title: "Social Media Followers"
},
{
    numbers : "90%",
    title: "Client Retention Rate"
}
]
---


<Heroui text="Scroll Down To See My Journey" image={Imageabout} imageHero={HeroImage}>
    <HeroTitle title="About damien braun" subtitle="About"/>
    <div class="grid xl:flex grid-cols-2 gap-3 justify-evenly   place-content-center text-center ">
        {overview.map(item => (
            <div class="flex flex-col gap-1 xl:w-96 bg-dark-12 bg-opacity-55  rounded-xl p-2 py-5 border">
                <p class="text-title3 font-semibold text-white">{item.numbers}</p>
                <p class="text-nowrap">{item.title}</p>
            </div>
        ))}
    </div> 
</Heroui>


<style>
    .clip{
        clip-path: polygon(100% 0%, 72% 0%, 28% 0%, 0% 0%, 0% 25%, 0% 54%, 0% 100%, 31% 100%, 63% 100%, 100% 100%, 100% 59%, 53% 59%, 54% 42%, 100% 41%);
    }
</style>